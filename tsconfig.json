{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
      "@components": [
        "./src/components"
      ],
      "@enums": [
        "./src/enums"
      ],
      "@functions": [
        "./src/functions"
      ],
      "@providers": [
        "./src/providers"
      ],
      "@services": [
        "./src/services"
      ],
      "@store": [
        "./src/store"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@constants": [
        "./src/constants"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@types": [
        "./src/@types"
      ]
    },
    "types": [
      "jest",
      "@types/styled-components-react-native"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
  ]
}